<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"/>
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Beschreibung -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beschreibung"/>
        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:lines="3"/>

        <!-- Bild URI -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bild URI"/>
        <EditText
            android:id="@+id/etImageUri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Tag -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tag"/>
        <Spinner
            android:id="@+id/spinnerTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Bewertung -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bewertung"/>
        <RatingBar
            android:id="@+id/ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1"/>

        <!-- Grobe Muskelgruppe -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muskelgruppe"/>
        <Spinner
            android:id="@+id/spinnerBroad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Spezifische Muskelgruppe -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spezifisch"/>
        <Spinner
            android:id="@+id/spinnerSpecific"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!-- Speichern -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speichern"/>

    </LinearLayout>
</ScrollView>
